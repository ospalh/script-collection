import shutil

start=198

for nr in range(0, 48, 2):
    try:
        shutil.move(
            'redsongs-{nr:03d}_0.ppm'.format(nr=nr),
            'redsong-{tg:03d}.ppm'.format(tg=start-2*nr))
    except FileNotFoundError:
        print('no {}'.format(nr))
